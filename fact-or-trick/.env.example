# Environment Configuration
# Copy this file to .env and configure your values

# Server Port
PORT=3000

# Bind Host (use 0.0.0.0 to accept external connections)
BIND_HOST=0.0.0.0

# Public URL (required for Cloudflare Tunnel and production deployments)
# Examples:
# PUBLIC_URL=https://your-tunnel.trycloudflare.com
# PUBLIC_URL=https://fact-or-trick.yourdomain.com
# PUBLIC_URL=https://game.example.com
PUBLIC_URL=

# Environment
NODE_ENV=production
